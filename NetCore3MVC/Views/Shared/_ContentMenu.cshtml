@{
    string controller = ViewData["controller"] != null ? ViewData["controller"].ToString() : string.Empty;
}
<head>
    <style>
        .sidenav{
            height: 100%;
            width: 0;
            z-index: 1;
            top: 0;
            left: 0;
            position: fixed;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 20px;
            transition: 0.5s;
        }

        .sidenav a{
            padding: 6px 8px 6px 16px;
            font-size: 25px;
            color: #818181;
            display: block;
            transition: 0.3s;
            text-decoration: none;
        }

        .sidenav a:hover{
            color: #f1f1f1;
        }

        .sidenav .closebtn{
            position: absolute;
            top: 0;
            right: 25px;
            font-size: 36px;
            margin-left: 50px;
        }
    </style>
</head>

<div id="mySidenav" class="container sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a asp-action="Notes" asp-controller="@controller">Notes</a>
    <a asp-action="Article" asp-controller="@controller">Articles</a>
    <a asp-action="About" asp-controller="@controller">About</a>
    <a asp-action="Contacts" asp-controller="@controller">Contacts</a>
</div>
<span style="font-size:30px; cursor:pointer" onclick="openNav()">&#9776; open</span>
<script>
    function openNav(){
        document.getElementById("mySidenav").style.width="250px";
    }

    function closeNav(){
        document.getElementById("mySidenav").style.width="0px";
    }
</script>
