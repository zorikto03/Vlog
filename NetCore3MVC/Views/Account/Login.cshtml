@model NetCore3MVC.Models.LoginModel
@{
    ViewData["title"] = "Sign in";
}
<head>
    <link rel="stylesheet" href="~/css/MySite.css" />
</head>
<div class="text-center">
    <h1 class="display-4">Sign in</h1>
</div>
<div id="liveAlertPlaceholder">
    @Html.Raw(@ViewBag.Alert)
</div>
<div>
    <form class="px-4 py-3" asp-controller="Account" asp-action="Login" asp-antiforgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Login" >Enter Login</label> <br />
            <input class="form-control" type="text" asp-for="Login" placeholder="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group" >
            <label asp-for="Password">Enter Password</label> <br />
            <input class="form-control" type="password" asp-for="Password" placeholder="Password" /> 
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Sign up" /> <br />            
        </div>
    </form> 
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Sign up</a>
</div>